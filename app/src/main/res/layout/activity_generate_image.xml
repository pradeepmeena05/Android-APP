<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1D100E0E"
    android:paddingHorizontal="10dp"
    android:paddingVertical="10dp"
    tools:context="generated_image.Generate_ImageActivity">


    <EditText
        android:id="@+id/EditTextid"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginVertical="30dp"
        android:background="@drawable/border"
        android:hint="Ask me Anything !"
        android:textColorHint="#68FFFFFF"
        android:textAlignment="center"
        android:textFontWeight="@integer/material_motion_duration_long_2"
        android:fontFamily="sans-serif" />

    <Button
        android:id="@+id/ButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="150dp"
        android:text="generate Answer"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/TextViewResult"
        android:layout_width="match_parent"
      android:layout_height="match_parent"
        android:textColor="#EFEBEB"
        android:textColorHighlight="@color/material_dynamic_neutral_variant100"
        android:textStyle="bold|italic"
         android:layout_marginVertical="250dp"
        android:textSize="23sp"
         android:layout_centerHorizontal="true"
     />

</RelativeLayout>